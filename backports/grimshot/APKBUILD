# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=grimshot
pkgver=1.6.1
pkgrel=1
pkgdesc="Script for taking screenshots with grim and slurp on Sway"
url="https://swaywm.org"
arch="noarch"
license="MIT"
options="!check" # no test suite
depends="
	cmd:grim
	cmd:jq
	cmd:notify-send
	cmd:slurp
	cmd:wl-copy
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/swaywm/sway/archive/$pkgver.tar.gz"
builddir="$srcdir/sway-$pkgver"

package() {
	install -D -m755 contrib/grimshot -t "$pkgdir"/usr/bin/
	install -D -m644 contrib/grimshot.1 -t "$pkgdir"/usr/share/man/man1/
}

sha512sums="
7f37fea99970db42c5485277df06d69bef5225fa03d25be179893b14d73c1d681f0355a1bc74091b4173bbccc88994a63ad0f9322e070811ba963648cf68cdeb  grimshot-1.6.1.tar.gz
"
