# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=swayr
pkgver=0.13.0_beta0
_pkgver=${pkgver/_beta/-beta.}
pkgrel=0
pkgdesc="A window switcher (and more) for Sway"
url="https://sr.ht/~tsdh/swayr/"
arch="aarch64 armhf armv7 ppc64le x86 x86_64"  # limited by rust/cargo
license="GPL-3.0-or-later"
makedepends="cargo"
source="$pkgname-v$_pkgver.tar.gz::https://git.sr.ht/~tsdh/swayr/archive/v$_pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$_pkgver"

prepare() {
	default_prepare

	# Optimize binary for size.
	cat >> Cargo.toml <<-EOF

		[profile.release]
		codegen-units = 1
		lto = true
		opt-level = "z"
		panic = "abort"
	EOF

	cargo fetch --locked
}

build() {
	cargo build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	cargo install --locked --offline --path . --root="$pkgdir/usr"
	rm "$pkgdir"/usr/.crates*
}

sha512sums="
7e9a6e3e036a64054d078d7c386f5ff8bb5310ba322798beb0c5cba7a83c44575e706da7e5b49ef22f8c827bfd5421b01ab7d9a0555431676490db7f6f012160  swayr-v0.13.0-beta.0.tar.gz
"
