# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=virt-init
pkgver=0.2.0
pkgrel=0
pkgdesc="Configure system after deploying on a virtualization platform"
url="https://github.com/jirutka/virt-init"
arch="noarch"
license="MIT"
subpackages="$pkgname-vmware"
source="https://github.com/jirutka/virt-init/archive/v$pkgver/$pkgname-$pkgver.tar.gz"

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

vmware() {
	pkgdesc="$pkgname (vmware-ovf)"
	depends="$pkgname=$pkgver-r$pkgrel open-vm-tools"

	amove usr/share/virt-init/platforms/vmware*
}

sha512sums="
